<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qiscus.internship.sudutnegeri">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity" />
        <activity
            android:name=".ui.Splashscreen"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.LandingPage.LandingActivity" />
        <activity
            android:name=".ui.LoginActivity"
            android:theme="@style/Splashscreen" />
        <activity android:name=".ui.Add.AddActivity" />
        <activity android:name=".ui.ListGalleryActivity" />
        <activity
            android:name=".ui.AddUser.AddUserActivity"
            android:theme="@style/Splashscreen"></activity>
        <activity android:name=".ui.AboutActivity"></activity>
    </application>

</manifest>