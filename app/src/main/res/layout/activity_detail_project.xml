<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qiscus.internship.sudutnegeri.ui.project.DetailProjectActivity">

    <ImageView
        android:src="@drawable/ic_about"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        />

    <RelativeLayout
        android:background="@drawable/bg_detail_project"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/ic_launcher_round"
            android:layout_width="60dp"
            android:layout_height="60dp" />

    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <Button
                android:id="@+id/bCampaignFunds"
                android:text="Campaign Funds"
                android:textSize="12dp"
                android:textColor="#FEFEFE"
                android:textAllCaps="false"
                android:background="@drawable/bg_rounded_trans_detail"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="20dp"
                android:layout_height="50dp"

                />

            <Button
                android:id="@+id/bRecruitVolunteer"
                app:srcCompat="@drawable/bg_rounded_trans_detail"
                android:textAllCaps="false"
                android:textColor="#FEFEFE"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Recruit Volunteer"
                android:textSize="12dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="300dp"
            android:layout_marginTop="230dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:src="@drawable/bg_btn_chat"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="90dp"
            android:layout_marginStart="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvUserName"
                android:text="Nama Si Sudut"
                android:fontFamily="@font/somanticrounded"
                android:textSize="18dp"
                android:textColor="#FEFEFE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvProjectTitle"
                android:text="Judul Project"
                android:textSize="14dp"
                android:fontFamily="@font/somanticrounded"
                android:textColor="#FEFEFE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="270dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:background="#FEFEFE"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TabLayout
                    android:id="@+id/tlDetailProject"
                    android:background="#0479ED"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TabItem
                        android:text="INFO"
                        android:textColor="#FEFEFE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <android.support.design.widget.TabItem
                        android:text="FOTO"
                        android:textColor="#FEFEFE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <android.support.design.widget.TabItem
                        android:text="TARGET"
                        android:textColor="#FEFEFE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </android.support.design.widget.TabLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:background="#0479ED"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rlFrameContent"
                        android:background="#0479ED"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="170dp">

                    </RelativeLayout>

                </ScrollView>

            </android.support.v7.widget.CardView>

    </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
